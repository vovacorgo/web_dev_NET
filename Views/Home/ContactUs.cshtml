@{
    ViewData["Title"] = "Contact Us";
}
<h1>@ViewData["Title"]</h1>

<form asp-action="SendEmail" asp-controller="Email" method="post" class="form">
    <p style="text-align=align:center">Share your feedback/question to us</p>
    <div class="form-group">
        <label for="email">Email:</label>
        <input type="email" id="email" name="Email" required class="form-control" />
    </div>
    <div class="form-group">
        <label for="subject">Subject:</label>
        <input type="text" id="subject" name="Subject" required class="form-control" />
    </div>
    <div class="form-group">
        <label for="message">Message:</label>
        <textarea id="message" name="Message" required class="form-control"></textarea>
    </div>
    <button type="submit" class="btn btn-primary">Send Email</button>
</form>